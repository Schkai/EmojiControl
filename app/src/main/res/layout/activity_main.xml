<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.ur.emojicontrol2.MainActivity"
    android:background="#ffffff"
    android:nestedScrollingEnabled="true"
    android:clickable="true"
    android:scrollIndicators="right"
    android:gravity="fill_vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Wie fühlst Du Dich? \nWähle ein passendes Bild:"
        android:id="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:typeface="serif"
        android:layout_marginBottom="20dp"
        android:textStyle="italic"
        android:textSize="20dp"
        android:textAlignment="center"
        />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true">

        <TableLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tableLayout"
            android:nestedScrollingEnabled="true"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/angst"
                    android:layout_column="0"
                    android:src="@drawable/angst"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/ekel"
                    android:layout_column="1"
                    android:src="@drawable/ekel"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/scham"
                    android:layout_column="2"
                    android:src="@drawable/scham"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/trauer"
                    android:layout_column="0"
                    android:src="@drawable/trauer"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/schuld"
                    android:layout_column="1"
                    android:src="@drawable/schuld"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/wut"
                    android:layout_column="2"
                    android:src="@drawable/wut"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/ueberraschung"
                    android:layout_column="0"
                    android:src="@drawable/ueberraschung"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/hoffnung"
                    android:layout_column="1"
                    android:src="@drawable/hoffnung"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/langeweile"
                    android:layout_column="2"
                    android:src="@drawable/langeweile"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/stolz"
                    android:layout_column="0"
                    android:src="@drawable/stolz"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/zufriedenheit"
                    android:layout_column="1"
                    android:src="@drawable/zufriedenheit"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/begeisterung"
                    android:layout_column="2"
                    android:src="@drawable/begeisterung"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>
            </TableRow>

            <TableRow
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/freude"
                    android:layout_column="0"
                    android:src="@drawable/freude"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>

                <ImageView
                    android:id="@+id/dankbarkeit"
                    android:layout_column="1"
                    android:src="@drawable/dankbarkeit"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"/>
            </TableRow>
        </TableLayout>
    </ScrollView>


</RelativeLayout>
