<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.ur.emojicontrol2.Ausloeser">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/inputHeadline"
        android:typeface="sans"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Hier steht die Emotion"
        android:padding="20dp"
        android:background="@color/accent_material_dark"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_below="@+id/inputHeadline"
        android:layout_centerHorizontal="true"
        android:src="@drawable/angst"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/intensity"
        android:typeface="sans"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Jetzt geht es um den Auslöser des Gefühls. Der Auslöser war:"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"
        android:paddingTop="20dp"/>

    <RadioGroup
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/intensity"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/radioGroup"
        >

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Der Auslöser war in dem Moment, als das Gefühl auftrat, örtlich oder zeitlich anwesend"
            android:id="@+id/radioButton2"
            android:checked="false"
            android:paddingTop="10dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Der Auslöser liegt in der Vergangenheit und die Erinnerung daran hat das Gefühl ausgelöst"
            android:id="@+id/radioButton"
            android:layout_alignBottom="@+id/radioGroup"
            android:layout_alignRight="@+id/imageView"
            android:layout_alignEnd="@+id/imageView"
            android:checked="false"
            android:paddingTop="10dp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Der Auslöser liegt in der Zukunft und Gedanken daran haben das Gefühl ausgelöst"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:paddingTop="10dp"/>
    </RadioGroup>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView10"
        android:typeface="sans"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Wie sehr bist Du oder andere für das Auftreten des Gefühls verantwortlich?"
        android:paddingBottom="20dp"
        android:layout_below="@+id/radioGroup"
        android:layout_centerHorizontal="true"
        android:paddingTop="20dp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar4"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView11"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView11"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Ich selbst"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView10"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView12"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Andere"
        android:layout_below="@+id/textView10"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView13"
        android:typeface="sans"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Wie stark konntest Du den Auslöser kontrollieren?"
        android:paddingBottom="20dp"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ratingBar4"
        android:paddingTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView14"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Gar nicht"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/textView15"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Zu 100 %"
        android:layout_alignBottom="@+id/textView13"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/textView14"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eintrag speichern\nund zurück"
        android:id="@+id/button6"
        android:textSize="12dp"
        android:layout_alignParentBottom="false"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ratingBar5"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK, weiter zur\nnächsten Frage"
        android:id="@+id/button7"
        android:textSize="12dp"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/ratingBar5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zurück zur Startseite"
        android:id="@+id/button8"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="false"
        android:layout_below="@+id/button6"/>

</RelativeLayout>
</ScrollView>