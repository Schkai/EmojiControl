<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:nestedScrollingEnabled="true"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="de.ur.emojicontrol2.Glossar">


        <TextView
            android:id="@+id/glossarHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:text="Glossar"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/g1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="false"
            android:layout_alignParentTop="false"
            android:layout_below="@+id/glossarHeadline"
            android:text="Anwesenheit Auslöser"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/g1"
            android:text="örtlich/zeitlich anwesend: z.B. „Ich bin im Krankenhaus und sehe meinen kranken Opa im Bett liegen. Deshalb werde ich traurig.“\nVergangenheit: z.B. „Ich denke an die Beerdigung meines Opas letzte Woche und werde deshalb traurig.“\nZukunft: z.B. „Ich denke an den Besuch meines Opas kommenden Freitag. Er ist sehr krank. Das macht mich traurig.“ "/>

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView4"
            android:text="Auslöser"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView6"
            android:text="Emotionsausdruck Verhaltensimpuls nachgebend"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView5"
            android:text="Grund/Ursache für das Auftreten eines Gefühls"/>

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView7"
            android:text="Gar nicht: z.B. „Ich möchte meinen Gegenüber gerne verprügeln, tue es aber nicht.“\n Weder noch: z.B. „Ich möchte meinen Gegenüber gerne verprügeln, gehe auch bereits auf ihn zu und mir zuckt es in den Fingern. Ich entscheide dann kurz vorher, es doch nicht zu tun.“\n Extrem: z.B. „Ich möchte meinen Gegenüber gerne verprügeln und tue es auch sofort.“"/>

        <TextView
            android:id="@+id/textView18"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView17"
            android:text="Kontrollierbarkeit Auslöser"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView19"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView18"
            android:text="Gar nicht: z.B. „Meinem Opa geht es schlecht und das macht mich traurig. Ich kann jedoch nichts dagegen unternehmen.“\n Zu 100%: z.B. „Meinem Opa geht es schlecht und das macht mich traurig. Ich koche ihm Tee, bringe ihm seine Medikamente und unterhalte mich mit ihm. Das sorgt immer dafür, dass es ihm gleich wieder gut geht.“"/>

        <TextView
            android:id="@+id/textView20"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView19"
            android:text="Locus"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView21"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView20"
            android:text="Verantwortlichkeit für den Auslöser der Emotion (innen - außen)"/>

        <TextView
            android:id="@+id/textView22"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView21"
            android:text="Reaktionsmuster: Aufmerksamkeit"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView22"
            android:text="Vermeidung: Situation aus dem Weg gehenAnnäherung: sich in die Situation begeben "/>

        <TextView
            android:id="@+id/textView24"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView23"
            android:text="Regulation"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView25"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView24"
            android:text="Beeinflussung der Dauer und Intensität einer Emotion   "/>

        <TextView
            android:id="@+id/textView26"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView25"
            android:text="Strategien Umgang negative Emotionen: Umdeutung Situation"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView27"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView26"
            android:text="Bisherige Erfahrungen beeinflussen die Wahrnehmung und Auffassung einer Situation, was aber nicht immer zutreffend ist.  Die Wahrnehmung und Interpretation bestimmter Situationen kann durch Gedanken verändert (=umgedeutet) werden (z.B. durch Humor, Perspektivübernahme s.u., veränderte Ursachenzuschreibung s.u., …)"/>

        <TextView
            android:id="@+id/textView28"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView27"
            android:text="Umdeutung Situation: Perspektivübernahme"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView29"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView28"
            android:text="Hineinversetzen in andere Person, anderen Blickwinkel auf Situation einnehmen."/>

        <TextView
            android:id="@+id/textView30"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView29"
            android:text="Umdeutung Situation:  Veränderte Ursachenzuschreibung"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView31"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView30"
            android:text="Den Grund für das Entstehen einer Situation bei einer anderen Sache/Person suchen. Z.B. „Zuerst dachte ich, ich wäre einfach unfähig. Dann fiel mir auf, dass ich bestimmte Informationen gar nicht hatte – man hätte sie mir geben sollen. Insofern war es auch nicht meine Schuld.“"/>

        <TextView
            android:id="@+id/textView32"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView31"
            android:text="Umdeutung Situation:  Veränderte Verantwortlichkeit"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView33"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/textView32"
            android:text="Du selbst: z.B. „Ich habe in der Prüfung nur wenig gewusst und ärgere mich jetzt, mich nicht besser vorbereitet zu haben.“  Andere: z.B. „Der Prüfer hat mir zu schwere Fragen gestellt und deswegen ärgere ich mich über ihn.“"/>

    </RelativeLayout>
</ScrollView>