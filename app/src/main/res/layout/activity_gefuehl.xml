<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="de.ur.emojicontrol2.Gefuehl">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/headline2"
        android:typeface="sans"
        android:textSize="20dp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Hier steht die Emotion"
        android:padding="20dp"
        android:background="@color/accent_material_dark"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emoji2"
        android:layout_below="@+id/headline2"
        android:layout_centerHorizontal="true"
        android:src="@drawable/angst"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/question2"
        android:typeface="sans"
        android:textSize="20dp"
        android:textAlignment="center"
        android:text="Bitte schätze ein, inwiefern Du dieses Gefühl ausgedrückt hast:"
        android:padding="10dp"
        android:layout_below="@+id/emoji2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingBottom="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mimik / Gestik"
        android:id="@+id/item20"
        android:layout_below="@+id/question2"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/low20"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Gar nicht"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item20"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/high20"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Extrem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/item20"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar20"
        android:numStars="5"
        android:layout_below="@+id/low20"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Verbale Äußerung"
        android:id="@+id/item21"
        android:layout_below="@+id/ratingBar20"
        android:layout_alignStart="@+id/item10"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/low21"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Extrem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/item21"
        android:layout_alignParentStart="false"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/high21"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Gar nicht"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item21"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar21"
        android:numStars="5"
        android:layout_below="@+id/low21"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Verhaltensimpuls nachgebend"
        android:id="@+id/item22"
        android:layout_below="@+id/ratingBar21"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/low22"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Gar nicht"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/item22"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar22"
        android:numStars="5"
        android:layout_below="@+id/low22"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/high22"
        android:typeface="sans"
        android:textSize="12dp"
        android:textAlignment="center"
        android:text="Extrem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/item22"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Eintrag speichern\nund zurück"
        android:id="@+id/back2"
        android:textSize="12dp"
        android:layout_below="@+id/ratingBar22"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK, weiter zur\nnächsten Frage"
        android:id="@+id/next2"
        android:textSize="12dp"
        android:layout_below="@+id/ratingBar22"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Zurück zur Startseite"
        android:id="@+id/start2"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/high12"
        android:layout_below="@+id/back2"/>


</RelativeLayout>
</ScrollView>